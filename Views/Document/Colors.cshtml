@{
	var _PageHeaderModel = new dotnetsource.Models.PageHeaderModel { Title = "Wells" };
	var _BreadCrumbModel = new dotnetsource.Models.BreadCrumbModel {
		FirstUrl = "/Home/Index", FirstUrlName = "Home",
		SecondUrl = "/Home/General", SecondUrlName = "UI Features",
		ThirdUrl = "/Home/Wells", ThirdUrlName = "Wells"
	};
	ViewBag.Title = _PageHeaderModel.Title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_PageHeader", _PageHeaderModel)
@Html.Partial("_BreadCrumb", _BreadCrumbModel)
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					Background Colors</h3>@Html.Partial("_PanelCloseTools")
			</div>
			<div class="panel-body">
				<div class="notes notes-primary">
					<p>@dotnetsource.Helpers.Common.SiteName CSS provides access to the main colors. You can sets: background, foreground for any elements. </p>
					<p class="description">
						To set background color: use prefix <code>bg</code>, to set foreground color: use prefix <code>fg</code>.
						Also you can set colors with classes <code>bg-*</code>, <code>fg-*</code>.
					</p>
					<h4>Background Color</h4>
					<pre>
						<code>&lt;div class="bg-primary"&gt;</code>
					</pre>
					<div class="bg-primary" style="width:10px;height:10px">.bg-primary</div>
					<pre>
						<code>&lt;div class="bg-success"&gt;</code>
					</pre>
					<pre>
						<code>&lt;div class="bg-info"&gt;</code>
					</pre>
					<pre>
						<code>&lt;div class="bg-warning"&gt;</code>
					</pre>
					<pre>
						<code>&lt;div class="bg-danger"&gt;</code>
					</pre>
					<pre>
						<code>&lt;div class="bg-purple"&gt;</code>
					</pre>
					<pre>
						<code>&lt;div class="bg-cardovan"&gt;</code>
					</pre>
					<pre>
						<code>&lt;div class="bg-teal"&gt;</code>
					</pre>
					<pre>
						<code>&lt;div class="bg-pink"&gt;</code>
					</pre>
					<pre>
						<code>&lt;div class="bg-dark-blue"&gt;</code>
					</pre>
					<pre>
						<code>&lt;div class="bg-blue"&gt;</code>
					</pre>
					<pre>
						<code>&lt;div class="bg-black"&gt;</code>
					</pre>
					<pre>
						<code>&lt;div class="bg-white"&gt;</code>
					</pre>
					<h4>Foreground Color</h4>
				</div>
				<div class="row">
					 
					  
					<div class="col-md-2">
						<div class="well bg-teal text-center">
							Teal</div>
					</div>
					<div class="col-md-2">
						<div class="well bg-pink text-center">
							Pink</div>
					</div>
					<div class="col-md-2">
						<div class="well bg-dark-blue text-center">
							Dark Blue</div>
					</div>
					<div class="col-md-2">
						<div class="well bg-blue text-center">
							Blue</div>
					</div>
				</div>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					Foreground Colors</h3>@Html.Partial("_PanelCloseTools")
			</div>
			<div class="panel-body">
				<div class="row">
					<div class="col-md-2">
						<div class="well bg-black fg-white text-center">
							White</div>
					</div>
					<div class="col-md-2">
						<div class="well fg-black text-center">
							Black</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
