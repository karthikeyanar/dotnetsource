@{
    var _PageHeaderModel = new dotnetsource.Models.PageHeaderModel { Title = "Form Layouts" };
    var _BreadCrumbModel = new dotnetsource.Models.BreadCrumbModel
    {
        FirstUrl = "/Home/Index",
        FirstUrlName = "Home",
        SecondUrl = "/Home/FormControls",
        SecondUrlName = "Forms",
        ThirdUrl = "/Home/FormLayouts",
        ThirdUrlName = "Form Layouts"
    };
    ViewBag.Title = _PageHeaderModel.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_PageHeader", _PageHeaderModel)
@Html.Partial("_BreadCrumb", _BreadCrumbModel)
@section styles {
}
@section scripts {
    <!-- Bootstrap FileUpload -->
    <script src="/js/plugins/fileinput/fileinput.js" type="text/javascript"></script>
}
<div class="tab-fancy">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
        <li class="active"><a href="#form1" data-toggle="tab">Row Separated</a></li>
        <li><a href="#form2" data-toggle="tab">Row Stripped</a></li>
        <li><a href="#form3" data-toggle="tab">Bordered</a></li>
        <li><a href="#form4" data-toggle="tab">2 Columns</a></li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content padding-top-10">
        <!-- Row Separated tab -->
        <div class="tab-pane active" id="form1">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Form Sample
                    </h3>@Html.Partial("_PanelCloseTools")
                </div>
                <div class="panel-body">
                    <h4>Row Separated</h4>
                    <div class="notes notes-primary">
                        <p>@dotnetsource.Helpers.Common.SiteName introduces row separated form.</p>
                    </div>
                    <pre><code>&lt;form action="#" method="POST" class='form-horizontal form-row-separated'&gt;
    &lt;div class="form-group"&gt;
        &lt;label for="textfield" class="col-md-2 control-label"&gt;
            Text input
        &lt;/label&gt;
        &lt;div class="col-md-4"&gt;
            &lt;input type="text" placeholder="Text input" class="form-control" /&gt;
        &lt;/div&gt;
    &lt;/div&gt;
    &lt;div class="form-group form-actions"&gt;
        &lt;div class="col-md-10 col-md-offset-2"&gt;
            &lt;button type="submit" class="btn btn-primary margin-right-10"&gt;
                Save
            &lt;/button&gt;
            &lt;button type="button" class="btn btn-danger"&gt;
                Cancel
            &lt;/button&gt;
        &lt;/div&gt;
    &lt;/div&gt;
&lt;/form&gt;</code></pre>
                </div>
            </div>
        </div>
