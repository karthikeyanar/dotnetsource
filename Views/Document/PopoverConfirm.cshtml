@{
	var _PageHeaderModel = new dotnetsource.Models.PageHeaderModel { Title = "Popover Confirm" };
	var _BreadCrumbModel = new dotnetsource.Models.BreadCrumbModel {
		FirstUrl = "/Home/Index", FirstUrlName = "Home",
		SecondUrl = "/Home/Modal", SecondUrlName = "Plugins",
		ThirdUrl = "/Home/PopoverConfirm", ThirdUrlName = "Popover Confirm"
	};
	ViewBag.Title = _PageHeaderModel.Title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_PageHeader", _PageHeaderModel)
@Html.Partial("_BreadCrumb", _BreadCrumbModel)
@section styles {
}
@section scripts {
	<script src="/js/plugins/bootstrap-confirmation/bootstrap-confirmation.min.js" type="text/javascript"></script>
	<script>
		$(function() {
			$('[data-toggle="confirmation"]').confirmation();
			$('[data-toggle="confirmation-singleton"]').confirmation({ singleton: true });
			$('[data-toggle="confirmation-popout"]').confirmation({ popout: true });
		})
	</script>
}
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-info">
			<div class="panel-heading">
				<h4 class="panel-title">
					Popover Confirm</h4>
			</div>
			<div class="panel-body" id="panelBody">
				<form action="#" method="POST">
				<div class="form-group">
					<h4>
						Basic</h4>
					<a data-toggle="confirmation" class="btn btn-danger">Click to toggle confirmation</a>
				</div>
				<div class="form-group">
					<h4>
						Custom buttons</h4>
					<button class="btn btn-default" data-toggle="confirmation" data-btn-ok-label="Continue" data-btn-ok-icon="glyphicon glyphicon-share-alt" data-btn-ok-class="btn-success" data-btn-cancel-label="Stoooop!" data-btn-cancel-icon="glyphicon glyphicon-ban-circle" data-btn-cancel-class="btn-danger">
						Confirmation</button>
				</div>
				<div class="form-group">
					<h4>
						Four directions</h4>
					<button class="btn btn-default" data-toggle="confirmation" data-placement="left">
						Confirmation on left</button>
					<button class="btn btn-default" data-toggle="confirmation" data-placement="top">
						Confirmation on top</button>
					<button class="btn btn-default" data-toggle="confirmation" data-placement="bottom">
						Confirmation on bottom</button>
					<button class="btn btn-default" data-toggle="confirmation" data-placement="right">
						Confirmation on right</button>
				</div>
				<div class="form-group">
					<h4>
						Singleton</h4>
					<button class="btn btn-default" data-toggle="confirmation" data-singleton="true">
						Confirmation 1</button>
					<button class="btn btn-default" data-toggle="confirmation" data-singleton="true">
						Confirmation 2</button>
				</div>
				<div class="form-group">
					<h4>
						Popout</h4>
					<button class="btn btn-default" data-toggle="confirmation" data-popout="true">
						Confirmation 1</button>
					<button class="btn btn-default" data-toggle="confirmation" data-popout="true">
						Confirmation 2</button>
				</div>
				</form>
			</div>
		</div>
	</div>
</div>
