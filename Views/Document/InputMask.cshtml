@{
    var _PageHeaderModel = new dotnetsource.Models.PageHeaderModel { Title = "Input Mask" };
    var _BreadCrumbModel = new dotnetsource.Models.BreadCrumbModel
    {
        FirstUrl = "/Home/Index",
        FirstUrlName = "Home",
        SecondUrl = "/Home/Modal",
        SecondUrlName = "Plugins",
        ThirdUrl = "/Home/InputMask",
        ThirdUrlName = "Input Mask"
    };
    ViewBag.Title = _PageHeaderModel.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_PageHeader", _PageHeaderModel)
@Html.Partial("_BreadCrumb", _BreadCrumbModel)
@section styles {
}
@section scripts {
    <!-- bootstrap inputmask -->
    <script src="/js/plugins/inputmask/jquery.inputmask.bundle.min.js"></script>
    <script src="/js/pages/inputmask.js"></script>
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-pink">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Input Mask
                </h3>@Html.Partial("_PanelCloseTools")
            </div>
            <div class="panel-body">
                <form action="#" method="POST" class="form-horizontal">
                    <div class="form-group">
                        <label for="textfield" class="col-md-2 control-label">
                           Date
                        </label>
                        <div class="col-md-4">
                            <input id="date1" class="form-control input-mask" data-inputmask="'alias': 'date'" />
                            <span class="help-text margin-top-10 pull-left">dd/mm/yyyy</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield" class="col-md-2 control-label">
                            Date 2
                        </label>
                        <div class="col-md-4">
                            <input id="date2" class="form-control input-mask" data-inputmask="'alias': 'mm/dd/yyyy'" />
                            <span class="help-text margin-top-10 pull-left">mm/dd/yyyy</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield" class="col-md-2 control-label">
                            Currency
                        </label>
                        <div class="col-md-4">
                            <input id="currency" class="form-control input-mask text-right" data-inputmask="'alias': 'numeric', 'groupSeparator': ',', 'autoGroup': true, 'digits': 2, 'digitsOptional': false, 'prefix': '$ ', 'placeholder': '0'" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield" class="col-md-2 control-label">
                            License plate
                        </label>
                        <div class="col-md-4">
                            <input id="licenseplate" class="form-control input-mask" data-inputmask="'mask': '[9-]AAA-999'" />
                            <span class="help-text margin-top-10 pull-left">[9-]AAA-999</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield" class="col-md-2 control-label">
                            Decimal
                        </label>
                        <div class="col-md-4">
                            <input id="decimal" class="form-control input-mask text-right" data-inputmask="'alias': 'decimal', 'groupSeparator': ',', 'autoGroup': true" />
                            <span class="help-text margin-top-10 pull-left">Group separator: , RadixPoint: .</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield" class="col-md-2 control-label">
                            Phone
                        </label>
                        <div class="col-md-4">
                            <input id="phone" class="form-control input-mask" data-inputmask="'mask': '(999) 999-9999'" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield" class="col-md-2 control-label">
                            IP address
                        </label>
                        <div class="col-md-4">
                            <input id="phone" class="form-control input-mask" data-inputmask="'alias': 'ip'" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="textfield" class="col-md-2 control-label">
                            Email address
                        </label>
                        <div class="col-md-4">
                            <input id="emailaddress" class="form-control input-mask" data-inputmask="'alias': 'email'" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
