@{
	var _PageHeaderModel = new dotnetsource.Models.PageHeaderModel { Title = "jQuery UI Slider" };
	var _BreadCrumbModel = new dotnetsource.Models.BreadCrumbModel {
		FirstUrl = "/Home/Index", FirstUrlName = "Home",
		SecondUrl = "/Home/Modal", SecondUrlName = "Plugins",
		ThirdUrl = "/Home/jQueryUISlider", ThirdUrlName = "jQuery UI Slider"
	};
	ViewBag.Title = _PageHeaderModel.Title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_PageHeader", _PageHeaderModel)
@Html.Partial("_BreadCrumb", _BreadCrumbModel)
@section styles {
	<!-- jquery ui slider -->
	<link href="/css/plugins/ui-lightness/jquery-ui-1.10.4.custom.min.css" rel="stylesheet" type="text/css" />
	<link href="/css/pages/jqueryuislider.css" rel="stylesheet" type="text/css" />
}
@section scripts {
	<!-- jquery ui slider -->
	<script src="/js/plugins/jquery-ui/jquery-ui-1.10.4.custom.min.js" type="text/javascript"></script>
	<script src="/js/plugins/jquery-ui/jquery.ui.touch-punch.min.js" type="text/javascript"></script>
	<script src="/js/pages/jqueryuislider.js" type="text/javascript"></script>
}
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-success">
			<div class="panel-heading">
				<h3 class="panel-title">
					jQuery UI Slider
				</h3>@Html.Partial("_PanelCloseTools")
			</div>
			<div class="panel-body">
				<h4>
					jQuery UI Slider</h4>
				<div class="notes notes-primary">
					<p>
						jQuery UI Slider Plugin is based on bootstrap popover. Use Bootstrap Popovers as confirmation dialogs. Simple and easy. Read more about it on <a href="http://ethaizone.github.io/Bootstrap-Confirmation/">Popover Confirm plugin website</a>.
					</p>
				</div>
				<h4>
					Js Files</h4>
				<pre><code>js/plugins/bootstrap-confirmation/bootstrap-confirmation.min.js</code></pre>
				<form action="#" method="POST" class='form-horizontal form-row-separated'>
				<div class="form-group">
					<label for="textfield" class="col-md-3 control-label">
						Default
					</label>
					<div class="col-md-4">
						<div id="slider">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="textfield" class="col-md-3 control-label">
						Color Picker
					</label>
					<div class="col-md-4">
						<div id="red">
						</div>
						<div id="green">
						</div>
						<div id="blue">
						</div>
						<div id="swatch" class="ui-widget-content ui-corner-all">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="textfield" class="col-md-3 control-label">
						Multiple Sliders
					</label>
					<div class="col-md-4">
						<p class="ui-state-default ui-corner-all ui-helper-clearfix" style="padding: 4px;">
							<span class="ui-icon ui-icon-volume-on" style="float: left; margin: -2px 5px 0 0;"></span>Master volume
						</p>
						<div id="master" style="width: 260px; margin: 15px;">
						</div>
						<p class="ui-state-default ui-corner-all" style="padding: 4px; margin-top: 4em;">
							<span class="ui-icon ui-icon-signal" style="float: left; margin: -2px 5px 0 0;"></span>Graphic EQ
						</p>
						<div id="eq">
							<span>88</span> <span>77</span> <span>55</span> <span>33</span> <span>40</span> <span>45</span> <span>70</span>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="textfield" class="col-md-3 control-label">
						Range Sliders
					</label>
					<div class="col-md-4">
						<p>
							<input type="text" id="amount" readonly style="border: 0; color: #f6931f; font-weight: bold;" />
						</p>
						<div id="slider-range">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="textfield" class="col-md-3 control-label">
						Range with fixed maximum
					</label>
					<div class="col-md-4">
						<p>
							<input type="text" id="amountmax" readonly style="border: 0; color: #f6931f; font-weight: bold;" />
						</p>
						<div id="slider-range-max">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="textfield" class="col-md-3 control-label">
						Range with fixed minimum
					</label>
					<div class="col-md-4">
						<p>
							<input type="text" id="amountmin" readonly style="border: 0; color: #f6931f; font-weight: bold;" />
						</p>
						<div id="slider-range-min">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="textfield" class="col-md-3 control-label">
						Vertical slider
					</label>
					<div class="col-md-4">
						<p>
							<input type="text" id="amountvertical" readonly style="border: 0; color: #f6931f; font-weight: bold;" />
						</p>
						<div id="slider-range-vertical" style="height: 250px;">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="textfield" class="col-md-3 control-label">
						Vertical range slider
					</label>
					<div class="col-md-4">
						<p>
							<input type="text" id="amountverticalrange" readonly style="border: 0; color: #f6931f; font-weight: bold;" />
						</p>
						<div id="slider-range-vertical-range" style="height: 250px;">
						</div>
					</div>
				</div>
				</form>
			</div>
		</div>
	</div>
</div>
