@{
	var _PageHeaderModel = new dotnetsource.Models.PageHeaderModel { Title = "Buttons" };
	var _BreadCrumbModel = new dotnetsource.Models.BreadCrumbModel {
		FirstUrl = "/Home/Index", FirstUrlName = "Home",
		SecondUrl = "/Home/General", SecondUrlName = "UI Features",
		ThirdUrl = "/Home/Buttons", ThirdUrlName = "Buttons"
	};
	ViewBag.Title = _PageHeaderModel.Title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_PageHeader", _PageHeaderModel)
@Html.Partial("_BreadCrumb", _BreadCrumbModel)
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-success">
			<div class="panel-heading">
				<h3 class="panel-title">
					Buttons</h3>@Html.Partial("_PanelCloseTools")
			</div>
			<div class="panel-body">
                <div class="notes notes-primary">
                    <p>
                        To create button you can style any html element with <code>.btn</code> class. <strong>@dotnetsource.Helpers.Common.SiteName</strong> replaces default bootstrap colors with theme specific.
                    </p>
                    <p>You can read more at <a href="http://getbootstrap.com/css/#buttons">Bootstrap Buttons page</a>.</p>
                </div>
			</div>
		</div>
		<div class="panel panel-dark-blue">
			<div class="panel-heading">
				<h3 class="panel-title">
					Social Buttons</h3>@Html.Partial("_PanelCloseTools")
			</div>
			<div class="panel-body">
                <div class="notes notes-success">
                    <p>
                        To create social button you can style any html element with <code>btn btn-block btn-social</code> class.
                    </p>
                </div>
                    <pre><code>&lt;div class="col-md-3"&gt;
    &lt;a href="#" class="btn btn-block btn-social btn-facebook"&gt;&lt;i class="fa fa-facebook"&gt;&lt;/i&gt;Sign in with Facebook&lt;/a&gt;
&lt;/div&gt;</code></pre>
                <pre><code>&lt;div class="col-md-3"&gt;
    &lt;a href="#" class="btn btn-block btn-social btn-google-plus"&gt;&lt;i class="fa fa-google-plus"&gt;&lt;/i&gt;Sign in with Google&lt;/a&gt;
&lt;/div&gt;</code></pre>
                <pre><code>&lt;div class="col-md-3"&gt;
    &lt;a href="#" class="btn btn-block btn-social btn-twitter"&gt;&lt;i class="fa fa-twitter"&gt;&lt;/i&gt;Sign in with Twitter&lt;/a&gt;
&lt;/div&gt;</code></pre>
                <div class="notes notes-success">
                    <p>
                        To create social icon button you can style any html element with <code>btn btn-block btn-social-icon</code> class.
                    </p>
                </div>
				<pre><code>&lt;a class="btn btn-social-icon btn-facebook"&gt;&lt;i class="fa fa-facebook"&gt;&lt;/i&gt;&lt;/a&gt;
&lt;a class="btn btn-social-icon btn-google-plus"&gt;&lt;i class="fa fa-google-plus"&gt;&lt;/i&gt;&lt;/a&gt;
&lt;a class="btn btn-social-icon btn-twitter"&gt;&lt;i class="fa fa-twitter"&gt;&lt;/i&gt;&lt;/a&gt;</code></pre>
            </div>
		</div>
		<div class="panel panel-blue">
			<div class="panel-heading">
				<h3 class="panel-title">
					Button Groups</h3>@Html.Partial("_PanelCloseTools")
			</div>
			<div class="panel-body">
                <div class="notes notes-primary">
                    <p>
                        Button Groups are based on <a href="http://getbootstrap.com/components/#btn-groups" target="_blank">button groups</a>
                    </p>
                </div>
			</div>
		</div>
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title">
					Button dropdowns</h3>@Html.Partial("_PanelCloseTools")
			</div>
			<div class="panel-body">
                <p>
                    Button dropdowns are based on <a href="http://getbootstrap.com/components/#btn-dropdowns" target="_blank">button dropdowns</a>
                </p>
			</div>
		</div>
		<div class="panel panel-warning">
			<div class="panel-heading">
				<h3 class="panel-title">
					Dropup menus
				</h3>@Html.Partial("_PanelCloseTools")
			</div>
			<div class="panel-body">
                <p>
                    Dropup variation are based on <a href="http://getbootstrap.com/components/#btn-dropdowns-dropup" target="_blank">button dropup variation</a>
                </p>
			</div>
		</div>
	</div>
</div>
