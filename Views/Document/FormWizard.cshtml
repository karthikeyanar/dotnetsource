@{
	var _PageHeaderModel = new dotnetsource.Models.PageHeaderModel { Title = "Form Wizard" };
	var _BreadCrumbModel = new dotnetsource.Models.BreadCrumbModel {
		FirstUrl = "/Home/Index",
		FirstUrlName = "Home",
		SecondUrl = "/Home/FormWizard",
		SecondUrlName = "Forms",
		ThirdUrl = "/Home/FormWizard",
		ThirdUrlName = "Form Wizard"
	};
	ViewBag.Title = _PageHeaderModel.Title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_PageHeader", _PageHeaderModel)
@Html.Partial("_BreadCrumb", _BreadCrumbModel)
@section styles {
	<!-- bootstrap datepicker -->
	<link href="/css/plugins/bootstrap-datepicker/bootstrap-datepicker.css" rel="stylesheet" type="text/css" />
	<!-- select2 -->
	<link href="/css/plugins/select2/select2.css" rel="stylesheet" type="text/css" />
	<!-- form-wizard page -->
	<link href="/css/pages/formwizard.css" rel="stylesheet" type="text/css" />
}
@section scripts {
	<!-- bootstrap datepicker -->
	<script src="/js/plugins/bootstrap-datepicker/bootstrap-datepicker.js" type="text/javascript"></script>
	<!-- select2 -->
	<script src="/js/plugins/select2/select2.min.js" type="text/javascript"></script>
	<!-- bootstrap wizard -->
	<script src="/js/plugins/bootstrap-wizard/jquery.bootstrap.wizard.js" type="text/javascript"></script>
	<script src="/js/pages/formwizard.js" type="text/javascript"></script>
}
<div class="row">
	<div class="col-md-12">
		<h4>
			Wizard</h4>
		<div class="notes notes-primary">
			<p>
				Twitter bootstrap plugin builds a wizard out of a formatter tabbable structure. It allows to build a wizard functionality using buttons to go through the different wizard steps and using events allows to hook into each step individually.</p>
			<p>
				Read more about it on <a href="http://vadimg.com/twitter-bootstrap-wizard-example/" target="_blank">Wizard plugin website</a>.</p>
		</div>
		<pre><code>&lt;div id="wizard"&gt;
	&lt;div class="tab-fancy"&gt;
		&lt;ul class="wizard-tab nav nav-tabs"&gt;
			&lt;li&gt;&lt;a href="#tab1" data-toggle="tab"&gt;1. Account Setup&lt;/a&gt;&lt;/li&gt;
			&lt;li&gt;&lt;a href="#tab2" data-toggle="tab"&gt;2. Personal Setup&lt;/a&gt;&lt;/li&gt;
			&lt;li&gt;&lt;a href="#tab3" data-toggle="tab"&gt;3. Billing&lt;/a&gt;&lt;/li&gt;
			&lt;li&gt;&lt;a href="#tab4" data-toggle="tab"&gt;5. Confirm&lt;/a&gt;&lt;/li&gt;
		&lt;/ul&gt;
		&lt;div class="tab-content"&gt;
			&lt;div class="progress progress-xs"&gt;
				&lt;div class="progress-bar progress-bar-success"&gt;
				&lt;/div&gt;
			&lt;/div&gt;
			&lt;div class="tab-pane" id="tab1"&gt;
				Content...
			&lt;/div&gt;
			&lt;div class="tab-pane" id="tab2"&gt;
				Content...
			&lt;/div&gt;
			&lt;div class="tab-pane" id="tab3"&gt;
				Content...
			&lt;/div&gt;
			&lt;div class="tab-pane" id="tab4"&gt;
				Content...
			&lt;/div&gt;
			&lt;div class="wizard-pager"&gt;
				&lt;ul class="pager wizard"&gt;
					&lt;li class="previous"&gt;
						&lt;button class="btn btn-primary pull-left"&gt;
							&lt;i class="fa fa-caret-left"&gt;&lt;/i&gt;&nbsp;Previous
						&lt;/button&gt;
					&lt;/li&gt;
					&lt;li class="next"&gt;
						&lt;button class="btn btn-info pull-right"&gt;
							Next&nbsp;&lt;i class="fa fa-caret-right"&gt;&lt;/i&gt;
						&lt;/button&gt;
					&lt;/li&gt;
					&lt;li class="finish" style="display: none"&gt;
						&lt;button class="btn btn-success pull-right"&gt;
							Finish &lt;i class="fa fa-check"&gt;&lt;/i&gt;
						&lt;/button&gt;
					&lt;/li&gt;
				&lt;/ul&gt;
			&lt;/div&gt;
		&lt;/div&gt;
	&lt;/div&gt;
&lt;/div&gt;
</code></pre>
	</div>
</div>
