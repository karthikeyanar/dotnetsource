@{
	var className = "";
	dotnetsource.Helpers.SubMenu subMenuEnum = ViewBag.Submenu;
	switch (subMenuEnum) {
		case dotnetsource.Helpers.SubMenu.BoxLayout:
			className = "header-fixed page-boxed";
			break;
		case dotnetsource.Helpers.SubMenu.SidebarCollapseLayout:
			className = "header-fixed page-fluid page-sidebar-collapse";
			break;
		case dotnetsource.Helpers.SubMenu.SidebarFixedLayout:
			className = "header-fixed page-fluid page-sidebar-fixed";
			break;
		default:
			className = "header-fixed page-fluid";
			break;
	}
}
