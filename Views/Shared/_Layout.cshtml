<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
	<!-- Apple devices fullscreen -->
	<meta name="apple-mobile-web-app-capable" content="yes" />
	<!-- Apple devices fullscreen -->
	<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
	<title>@ViewBag.Title - </title>
	@Html.Partial("_Styles")
	@RenderSection("styles", required: false)
</head>
@{
	var className = "";
	dotnetsource.Helpers.SubMenu subMenuEnum = ViewBag.Submenu;
	switch (subMenuEnum) {
		case dotnetsource.Helpers.SubMenu.BoxLayout:
			className = "header-fixed page-boxed";
			break;
		case dotnetsource.Helpers.SubMenu.SidebarCollapseLayout:
			className = "header-fixed page-fluid page-sidebar-collapse";
			break;
		case dotnetsource.Helpers.SubMenu.SidebarFixedLayout:
			className = "header-fixed page-fluid page-sidebar-fixed";
			break;
		default:
			className = "header-fixed page-fluid";
			break;
	}
}
<body class="@className">
	<!-- header -->
	<div class="header navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<!-- navbar-header -->
			<div class="navbar-header company-info">
				<button type="button" class="navbar-toggle ps-sm-toggler">
					<span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
				</button>
				<a href="index.php" class="navbar-brand">Pepper</a>
				<button type="button" class="navbar-toggle ps-collapse-fixed-toggler">
					<span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
				</button>
			</div>
			<!-- end navbar-header -->
			<!-- navbar-header -->
			<div class="navbar-header top-menu">
				<ul>
					<li class="dropdown"><a href="#" title="Settings" data-toggle="dropdown" rel="tooltip" data-placement="bottom"><i class="fa fa-cog fa-lg"></i></a>
						<div class="dropdown-menu dropdown-menu-right settings hold-on-click">
							<form id="frmLayoutSettings" class="form-horizontal form-row-separated" onsubmit="return false" role="form">
							<div class="form-group">
								<div class="col-md-12">
									<label class="checkbox metro-checkbox">
										<input type="checkbox" id="layout" />Fixed Layout
									</label>
								</div>
							</div>
							<div class="form-group">
								<div class="col-md-12">
									<label class="checkbox metro-checkbox">
										<input type="checkbox" id="header" />Fixed Header
									</label>
								</div>
							</div>
							<div class="form-group">
								<div class="col-md-12">
									<label class="checkbox metro-checkbox">
										<input type="checkbox" id="sidebar" />Fixed Sidebar
									</label>
								</div>
							</div>
							</form>
						</div>
					</li>
					<li class="dropdown"><a href="lock.php" title="Lock" data-toggle="tooltip" data-placement="bottom"><i class="fa fa-lock fa-lg"></i></a></li>
					<li><a class="dropdown-toggle" data-toggle="dropdown" href="#"><span>Jarge Lue</span></a>
						<ul class="dropdown-menu dropdown-menu-right" role="menu">
							<li><a href="#">Edit Profile</a></li>
							<li><a href="#">Account Settings</a></li>
							<li class="divider"></li>
							<li><a href="#">Logout</a></li>
						</ul>
					</li>
				</ul>
				<button data-target=".hor-menu" data-toggle="collapse" class="navbar-toggle hor-menu-toggle" type="button">
					<span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
				</button>
			</div>
			<!-- end navbar-header -->
		</div>
	</div>
	<!-- end header -->
	<!-- start page container -->
	@RenderSection("featured", required: false)
	<div class="page-container container">
		<!-- start page sidebar -->
		@Html.Partial("_MenuSidebar")
		<!-- end page sidebar -->
		<div class="page-content">
			@RenderBody()
		</div>
		<!-- start footer -->
		<div class="footer">
			&copy; 2014 <strong>Pepper</strong> Admin Theme
		</div>
		<!-- end footer -->
	</div>
	<!-- end page container -->
	@Html.Partial("_Scripts")
	@RenderSection("scripts", required: false)
</body>
</html>
