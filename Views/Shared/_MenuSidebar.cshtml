<!-- page sidebar -->
<div id="left-sidebar" class="page-sidebar page-sidebar-left">
	<div class="sidebar-content" data-scroll-handle-color="#000" data-scroll-rail-color="#333" data-scroll-rail-opacity=".2" data-scroll-handle-opacity=".5">
        <div class="sidebar-user">
            <div class="avatar"><img src="/img/avatars/75/1.jpg"/></div>
            <div class="info"><span class="name">Angelina Glory</span><span class="status">Admin</span></div>
        </div>
		<ul class="nav page-sidebar-menu">
			@{
				var topMenus = dotnetsource.Helpers.Common.Menus.Where(q => q.TopMenuID == 0).ToList();
			}
			@foreach (dotnetsource.Helpers.Menu menu in topMenus) {
	   int viewBagTopMenuID = (int)ViewBag.TopMenu;
	   int viewBagSubMenuID = (int)ViewBag.Submenu;
	   int menuID = menu.MenuID;
	   var subMenus = dotnetsource.Helpers.Common.Menus.Where(q => q.TopMenuID == menuID).ToList();
				<li class="@((viewBagTopMenuID == menuID) ? "active open" : "")"><a href="@(string.IsNullOrEmpty(menu.MenuURL) ? "javascript:;" : menu.MenuURL)"><i class="@menu.IconName"></i><span class="menu-text">@menu.MenuName</span><span class="fa arrow @((subMenus.Count()<=0 ? "hide" : ""))"></span></a>
					@if (subMenus.Count() > 0) {
						<ul class="nav sub-menu collapse @((viewBagTopMenuID == menuID) ? "in" : "")">
							@foreach (dotnetsource.Helpers.Menu submenu in subMenus) {
								<li class="@(viewBagSubMenuID == submenu.MenuID ? "active" : "")"><a href="@(string.IsNullOrEmpty(submenu.MenuURL) ? "javascript:;" : submenu.MenuURL)">@submenu.MenuName</a></li>
	   }
						</ul>
	 }
				</li>
   }
			<li><a href="javascript:;"><i class="fa fa-sitemap"></i><span class="menu-text">Menu Levels</span><span class="fa arrow"></span></a>
				<ul class="nav sub-menu collapse">
					<li><a href="#">Menu Level 1.1</a>
					<li><a href="#">Menu Level 1.2</a>
					<li><a href="#">Menu Level 1.3<span class="fa arrow"></span></a>
						<ul class="nav sub-menu collapse">
							<li><a href="#">Menu Level 2.1</a>
							<li><a href="#">Menu Level 2.2<span class="fa arrow"></span></a>
								<ul class="nav sub-menu collapse">
									<li><a href="#">Menu Level 3.1</a>
										<ul class="nav sub-menu collapse">
											<li><a href="#">Menu Level 4.1</a></li>
											<li><a href="#">Menu Level 4.2</a></li>
										</ul>
									</li>
									<li><a href="#">Menu Level 3.2</a></li>
								</ul>
							</li>
							<li><a href="#">Menu Level 2.3</a>
						</ul>
					</li>
				</ul>
			</li>
		</ul>
	</div>
</div>
<!-- end page-sidebar -->
