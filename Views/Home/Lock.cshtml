@{
	var _PageHeaderModel = new dotnetsource.Models.PageHeaderModel { Title = "Lock" };
	var _BreadCrumbModel = new dotnetsource.Models.BreadCrumbModel {
		FirstUrl = "/", FirstUrlName = "Home",
		SecondUrl = "/Home/SignIn", SecondUrlName = "Pages",
		ThirdUrl = "/Home/Lock", ThirdUrlName = "Lock"
	};
	ViewBag.Title = _PageHeaderModel.Title;
	Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
@section styles {
	<link href="/css/pages/lock.css" rel="stylesheet" type="text/css" />
}
<div class="panel lock-panel">
	<div class="panel-body">
		<form method="post" action="/Home/Index">
		<div class="form-group">
			<div class="login-user">
				<img src="/img/avatars/150/1.jpg" alt="..." />
			</div>
		</div>
		<div class="form-group text-center">
			<h3>
				Angelina Glory</h3>
		</div>
		<div class="form-group text-center">
			<h4>
				angelinaglory@email.com</h4>
		</div>
		<div class="form-group">
			<div class="input-icon">
				<i class="fa fa-lock"></i>
				<input type="password" class="form-control" name="password" placeholder="Password" />
			</div>
		</div>
		<div class="form-group text-center">
			<button id="submit" name="submit" class="btn btn-success">
				Un Lock</button>
		</div>
		</form>
	</div>
</div>
