@{
    var _PageHeaderModel = new dotnetsource.Models.PageHeaderModel { Title = "Lock" };
    var _BreadCrumbModel = new dotnetsource.Models.BreadCrumbModel
    {
        FirstUrl = "/",
        FirstUrlName = "Home",
        SecondUrl = "/Home/SignIn",
        SecondUrlName = "Pages",
        ThirdUrl = "/Home/Lock",
        ThirdUrlName = "Lock"
    };
    ViewBag.Title = _PageHeaderModel.Title;
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
@section styles {
    <link href="/css/pages/lock.css" rel="stylesheet" type="text/css" />
}
<div class="lock-container">
    <div class="lock-content">
        @Html.Partial("_PublicLogo")
        <div class="panel lock-panel">
            <div class="panel-body">
                <form method="post" class="form-validate" action="/Home/SignIn">
                    <div class="form-group">
                        <h3>Forget Password ?</h3>
                    </div>
                    <div class="form-group">
                        <p>Enter your e-mail address below to reset your password.</p>
                    </div>
                    <div class="form-group">
                        <div class="input-icon">
                            <i class="fa fa-envelope"></i>
                            <input type="text" class="form-control" data-msg-email="Invalid Email" data-msg-required="Required" data-rule-email="true" data-rule-required="true" placeholder="Email" id="email" name="email" aria-required="true">
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button id="submit" name="submit" class="btn btn-success">Submit</button>
                    </div>
                    <div class="form-group text-center">
                        <a href="/Home/SignIn" class="fg-white"><i class="fa fa-lock"></i>&nbsp;&nbsp;Return to Login Page</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
