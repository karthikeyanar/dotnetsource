@{
	var _PageHeaderModel = new dotnetsource.Models.PageHeaderModel { Title = "Block UI" };
	var _BreadCrumbModel = new dotnetsource.Models.BreadCrumbModel {
		FirstUrl = "/", FirstUrlName = "Home",
		SecondUrl = "/Home/Modal", SecondUrlName = "Plugins",
		ThirdUrl = "/Home/BlockUI", ThirdUrlName = "Block UI"
	};
	ViewBag.Title = _PageHeaderModel.Title;
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_PageHeader", _PageHeaderModel)
@Html.Partial("_BreadCrumb", _BreadCrumbModel)
@section styles {
}
@section scripts {
	<script>
		$(function() {
			var $panelBody=$("#panelBody");
			var $news=$("#news");
			$("#block").click(function() {
				App.handleBlockUI({
					"target": $panelBody
				});
				// for demo purpose
				setTimeout(function() {
					App.unblockUI($panelBody);
				},1000)
			});
			$("#blockCustom").click(function() {
				App.handleBlockUI({
					"target": $panelBody,
					"message": $("#blockMessage").val()
				});
				// for demo purpose
				setTimeout(function() {
					App.unblockUI($panelBody);
				},1000)
			});
			$("#blockVerticalTop").click(function() {
				App.handleBlockUI({
					"target": $panelBody,
					"message": $("#blockMessage").val(),
					"verticalTop": true
				});
				// for demo purpose
				setTimeout(function() {
					App.unblockUI($panelBody);
				},1000)
			});
			$("#blockNews").click(function() {
				App.handleBlockUI({
					"target": $news
				});
				// for demo purpose
				setTimeout(function() {
					App.unblockUI($news);
				},1000)
			});
			$(".block-colors").click(function() {
				var bgColor=$(this).attr("data-color");
				App.handleBlockUI({
					"target": $panelBody,
					"bgColor": bgColor
				});
				// for demo purpose
				setTimeout(function() {
					App.unblockUI($panelBody);
				},1000)
			});
			$("#pageBlock").click(function() {
				App.handleBlockUI({
					"zindex": "9999999",
					"overlayOpacity": "0.5"
				});
				// for demo purpose
				setTimeout(function() {
					App.unblockUI();
				},1000)
			});
		});
	</script>
}
