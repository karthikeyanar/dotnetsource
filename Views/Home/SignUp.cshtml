@{
	var _PageHeaderModel = new dotnetsource.Models.PageHeaderModel { Title = "Sign Up" };
	var _BreadCrumbModel = new dotnetsource.Models.BreadCrumbModel {
		FirstUrl = "/", FirstUrlName = "Home",
		SecondUrl = "/Home/SignIn", SecondUrlName = "Pages",
		ThirdUrl = "/Home/SignUp", ThirdUrlName = "Sign Up"
	};
	ViewBag.Title = _PageHeaderModel.Title;
	Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
@section styles {
	<link href="/css/pages/signup.css" rel="stylesheet" type="text/css" />
}
<div class="signup-container">
	<div class="signup-content">
		@Html.Partial("_PublicLogo")
		<div class="panel panel-white ">
			<div class="panel-heading padding-15">
				<h3 class="panel-title">
					Sign Up</h3>
			</div>
			<div class="panel-body padding-15">
				<form action="#" method="POST" id="registerForm" class="form-horizontal form-validate">
				<div class="form-group">
					<div class="col-md-12">
						<div class="input-icon">
							<i class="fa fa-font"></i>
							<input type="text" name="first_name" id="first_name" placeholder="First Name" data-rule-required="true" data-msg-required="Required" class="form-control" />
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						<div class="input-icon">
							<i class="fa fa-font"></i>
							<input type="text" name="last_name" id="last_name" placeholder="Last Name" data-rule-required="true" data-msg-required="Required" class="form-control" />
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						<div class="input-icon">
							<i class="fa fa-envelope"></i>
							<input type="text" name="email" id="email" placeholder="Email" data-rule-required="true" data-rule-email="true" data-msg-required="Required" data-msg-email="Invalid Email" class="form-control" />
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						<div class="input-icon">
							<i class="fa fa-lock"></i>
							<input type="password" name="password" id="password" placeholder="Password" class="form-control" data-rule-minlength="6" data-msg-required="Required" data-rule-required="true" />
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						<div class="input-icon">
							<i class="fa fa-check"></i>
							<input type="password" name="confirm_password" id="confirm_password" placeholder="Confirm Password" class="form-control" data-msg-required="Required" data-rule-required="true" data-rule-equalto="#password" data-msg-equalto="These passwords don't match. Try again?" />
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						<div class="checkbox fa-checkbox fa-checkbox-success">
							<input type="checkbox" name="policy" id="policy" class="form-control" data-msg-required="Required" data-rule-required="true" /><label>I agree to the <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></label>
						</div>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12">
						<button type="submit" class="btn btn-success margin-right-10">
							Sign Up</button>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12 text-center">
						<span>Already have an account?</span>
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-12 text-center">
						<a href="/Home/SignIn" class="btn btn-primary btn-block">Sign In</a>
					</div>
				</div>
				</form>
			</div>
		</div>
	</div>
</div>
