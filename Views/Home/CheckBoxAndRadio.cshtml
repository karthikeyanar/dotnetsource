@{
    var _PageHeaderModel = new dotnetsource.Models.PageHeaderModel { Title = "General" };
    var _BreadCrumbModel = new dotnetsource.Models.BreadCrumbModel
    {
        FirstUrl = "/Home/Index",
        FirstUrlName = "Home",
        SecondUrl = "/Home/General",
        SecondUrlName = "UI Features",
        ThirdUrl = "/Home/General",
        ThirdUrlName = "General"
    };
    ViewBag.Title = _PageHeaderModel.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_PageHeader", _PageHeaderModel)
@Html.Partial("_BreadCrumb", _BreadCrumbModel)
@section styles {
}
@section scripts {
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-pink">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Checkbox
                </h3>@Html.Partial("_PanelCloseTools")
            </div>
            <div class="panel-body">
                <form action="#" method="POST">
                    <div class="row">
                        <div class="col-md-4">
                            <h3 class="no-margin-top">
                                Basic
                            </h3>
							<div class="checkbox metro-checkbox">
                                <label>
                                    <input type="checkbox" />Default
                                </label>
                            </div>
                            <div class="checkbox metro-checkbox metro-checkbox-primary">
                                <label>
                                    <input type="checkbox" checked />Primary
                                </label>
                            </div>
                            <div class="checkbox metro-checkbox metro-checkbox-success">
                                <label>
                                    <input type="checkbox" checked />Success
                                </label>
                            </div>
                            <div class="checkbox metro-checkbox metro-checkbox-info">
                                <label>
                                    <input type="checkbox" checked />Info
                                </label>
                            </div>
                            <div class="checkbox metro-checkbox metro-checkbox-warning">
                                <label>
                                    <input type="checkbox" checked />Warning
                                </label>
                            </div>
                            <div class="checkbox metro-checkbox metro-checkbox-danger">
                                <label>
                                    <input type="checkbox" checked />Danger
                                </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h3 class="no-margin-top">
                                Circled
                            </h3>
							<div class="checkbox metro-checkbox metro-checkbox-circle">
                                <label>
                                    <input type="checkbox" />Default
                                </label>
                            </div>
                            <div class="checkbox metro-checkbox metro-checkbox-circle metro-checkbox-primary">
                                <label>
                                    <input type="checkbox" checked />Primary
                                </label>
                            </div>
                            <div class="checkbox metro-checkbox metro-checkbox-circle metro-checkbox-success">
                                <label>
                                    <input type="checkbox" checked />Success
                                </label>
                            </div>
                            <div class="checkbox metro-checkbox metro-checkbox-circle metro-checkbox-info">
                                <label>
                                    <input type="checkbox" checked />Info
                                </label>
                            </div>
                            <div class="checkbox metro-checkbox metro-checkbox-circle metro-checkbox-warning">
                                <label>
                                    <input type="checkbox" checked />Warning
                                </label>
                            </div>
                            <div class="checkbox metro-checkbox metro-checkbox-circle metro-checkbox-danger">
                                <label>
                                    <input type="checkbox" checked />Danger
                                </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h3 class="no-margin-top">
                                Disabled
                            </h3>
                            <p>
                                .checkbox-circle for roundness.
                            </p>
                            <div class="checkbox metro-checkbox">
                                <label>
                                    <input type="checkbox" disabled="" id="checkbox13" />Can't check this
                                </label>
                            </div>
                            <div class="checkbox metro-checkbox metro-checkbox-success">
                                <label>
                                    <input type="checkbox" disabled="" checked />This too
                                </label>
                            </div>
                            <div class="checkbox metro-checkbox metro-checkbox-circle metro-checkbox-success">
                                <label>
                                    <input type="checkbox" disabled="" checked />And this
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <h3 class="no-margin-top">
                                Checkbox Inline
                            </h3>
							<label class="checkbox-inline metro-checkbox">
                                <input type="checkbox" />Default
                            </label>
                            <label class="checkbox-inline metro-checkbox metro-checkbox-primary">
                                <input type="checkbox" checked />Primary
                            </label>
                            <label class="checkbox-inline metro-checkbox metro-checkbox-success">
                                <input type="checkbox" checked />Success
                            </label>
                            <label class="checkbox-inline metro-checkbox metro-checkbox-info">
                                <input type="checkbox" checked />Info
                            </label>
                            <label class="checkbox-inline metro-checkbox metro-checkbox-warning">
                                <input type="checkbox" checked />Warning
                            </label>
                            <label class="checkbox-inline metro-checkbox metro-checkbox-danger">
                                <input type="checkbox" checked />Danger
                            </label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
